<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:layout_centerHorizontal="true"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FF8C00"
        android:layout_marginTop="15dp"
        android:text="Įvertinkite savo apsilankymą"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp">

        <Button
            android:id="@+id/mygtukoId1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="35sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="1 balas" />

        <Button
            android:id="@+id/mygtukoId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="35sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="2 balai" />

        <Button
            android:id="@+id/mygtukoId3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="35sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="3 balai" />

        <Button
            android:id="@+id/mygtukoId4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="35sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="4 balai" />

        <Button
            android:id="@+id/mygtukoId5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="35sp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="5 balai" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:src="@mipmap/curiocity" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:src="@mipmap/curiocity" />


</LinearLayout>

